	DISTRO_NAME='kali'
	DISTRO_CODE='rolling'
	NODE02_ENABLED=true
	TMOE_LINUX_CONTAINER_DISTRO="${DISTRO_NAME}-${DISTRO_CODE}"
	creat_container_edition_txt
	go_to_proot_management
}
