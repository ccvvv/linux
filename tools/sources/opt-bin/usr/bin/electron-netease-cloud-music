#!/usr/bin/env bash
TMOE_BIN='/opt/electron-netease-cloud-music/app.asar'
ELECTRON_BIN='/opt/electron/electron'
export ELECTRON_IS_DEV=0
case "$(id -u)" in
0) exec ${ELECTRON_BIN} ${TMOE_BIN} --no-sandbox "$@" ;;
*)
    exec ${ELECTRON_BIN} ${TMOE_BIN} "$@"
    case "$?" in
    0) ;;
    *) exec ${ELECTRON_BIN} ${TMOE_BIN} --no-sandbox "$@" ;;
    esac
    ;;
esac
